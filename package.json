{
  "name": "server_project_starter",
  "version": "1.0.0",
  "description": "",
  "main": "app.js",
  "scripts": {
    "start": "node app.js",
    "_start": "SET NODE_ENV=development && nodemon app.js",
    "init_db": "SET NODE_ENV=development && node ./initDb/index.js",
    "test": "jest $1.test || jest",
    "deploy": "git push heroku master"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "axios": "^0.21.1",
    "body-parser": "1.19.0",
    "connect-mongodb-session": "^3.1.0",
    "cookie-parser": "^1.4.5",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "express-session": "^1.16.2",
    "express-sslify": "^1.2.0",
    "jsonwebtoken": "^8.5.1",
    "mongodb": "^3.4.0",
    "mongodb-memory-server": "^6.9.6",
    "socket.io": "^4.5.4"
  },
  "devDependencies": {
    "nodemon": "1.18.10",
    "jest": "^26.6.3"
  },
  "nodemonConfig": {
    "ignore": [
      "data/*",
      "public/storage"
    ]
  },
  "jest": {
    "testMatch": [
      "<rootDir>/**/__tests__/**/*.{js,jsx,ts,tsx}",
      "<rootDir>/**/?(*.)(spec|test).{js,jsx,ts,tsx}"
    ],
    "testPathIgnorePatterns": [
      "<rootDir>/node_modules/"
    ],
    "setupFiles": [
      "<rootDir>/tests/loggerSetup.js"
    ]
  }
}
